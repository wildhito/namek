{% extends 'base.html.twig' %}

{% block content %}
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br><br>
      <h1 class="header center orange-text">{{ block('title') }}</h1>
      <div class="row center">
        <h5 class="header col s12 light">A great association of awesome players</h5>
      </div>
      <div class="row center">
        <a href="{{ path('game_index') }}" id="download-button" class="btn-large waves-effect waves-light orange">Listen to our podcasts!</a>
      </div>
      <br><br>

    </div>

    <div class="container">
      <div class="section">
        <div class="row">
          {% for game in games %}
          <div class="col s12 m4">
            <div class="card small horizontal">
                <div class="card-content center">
                  <img class="logo-medium circle" src="{{ game.logowebpath }}" alt="" /><br/>
                  <a class="card-title" href="{{ path('game_show', {'shortname': game.shortname }) }}">{{ game.fullname }}</a>
                  <p class="light">{{ game.brief }}</p>
                </div>
            </div>
          </div>
          {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}

