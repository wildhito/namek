{% extends 'base.html.twig' %}

{% block content %}
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br><br>
      <h1 class="header center orange-text">{{ block('title') }}</h1>
      <div class="row center">
        <h5 class="header col s12 light">A great association of awesome players</h5>
      </div>
      <div class="row center">
        <a href="{{ path('game_index') }}" id="download-button" class="btn-large waves-effect waves-light orange">Listen our podcasts!</a>
      </div>
      <br><br>

    </div>

    <div class="container">
      <div class="section">
        <div class="row">
          {% for game in games %}
          <div class="col s12 m4">
            <div class="icon-block">
              <h2 class="center"><img class="logo-medium" src="{{ game.logowebpath }}" alt="" /></h2>
              <h5 class="center"><a href="{{ path('game_show', {'shortname': game.shortname }) }}">{{ game.fullname }}</a></h5>

              <p class="light">{{ game.brief }}</p>
            </div>
          </div>
          {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}

