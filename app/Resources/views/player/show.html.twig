{% extends 'base.html.twig' %}

{% block body %}
    <h1>Player</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ player.login }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ player.email }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{% if player.enable %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Games</th>
                <td><ul>
                    {% for game in player.games %}
                    <li>{{ game.fullname }}</li>
                    {% endfor %}
                </ul></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            {{ form_start(enable_form) }}
                <input type="submit" value="{% if player.enable %}Disable{% else %}Enable{% endif %}" />
            {{ form_end(enable_form) }}
        </li>
        <li>
            <a href="{{ path('player_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('player_edit', { 'id': player.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" />
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
