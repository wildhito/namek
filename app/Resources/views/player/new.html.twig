{% extends 'base.html.twig' %}

{% block content %}
<div class="section">
  <div class="container">
    <h1 class="header center orange-text">Registration</h1>
  </div>
</div>

<div class="section">
  <div class="container">
    <blockquote>
      <p class="flow-text valign-wrapper"><i class="material-icons">warning</i> Your account will be locked until an administrator manually validates it.</p>
    </blockquote>
  </div>
</div>

<div class="section">
  <div class="container">
    {{ form_start(form) }}
        {{ form_row(form.login) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}
        {{ form_row(form.recaptcha) }}

        <button class="btn btn-large right" type="submit">Register!</button>
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}
