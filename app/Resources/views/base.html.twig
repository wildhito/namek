<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
        <title>{% block title %}{{ website.name }}{% endblock %}</title>
        {% block stylesheets %}
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css" media="screen,projection"/>
        <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" media="screen,projection"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
        <nav class="light-blue lighten-1" role="navigation">
            <div class="nav-wrapper container"><a id="logo-container" href="{{ path('homepage') }}" class="brand-logo"><img id="website-logo" src="{{ asset('images/website_logo.png') }}" alt="{{ block('title') }} " /></a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="{{ path('game_index') }}">{{ 'Games'|trans }}</a></li>
                    <li><a href="{{ path('player_index') }}">{{ 'Players'|trans }}</a></li>
                    {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('player_show', { 'login': app.user.login }) }}">{{ app.user.login }}</a></li>
                    <li><a href="{{ path('logout') }}">{{ 'Log out'|trans }}</a></li>
                    {% else %}
                    <li><a href="{{ path('register') }}">{{ 'Join us'|trans }}</a></li>
                    <li><a href="{{ path('login') }}">{{ 'Login'|trans }}</a></li>
                    {% endif %}
                </ul>

                <ul id="nav-mobile" class="side-nav">
                    <li><a href="{{ path('game_index') }}">{{ 'Games'|trans }}</a></li>
                    <li><a href="{{ path('player_index') }}">{{ 'Players'|trans }}</a></li>
                    {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('player_show', { 'login': app.user.login }) }}">{{ app.user.login }}</a></l
i>
                    <li><a href="{{ path('logout') }}">{{ 'Log out'|trans }}</a></li>
                    {% else %}
                    <li><a href="{{ path('register') }}">{{ 'Join us'|trans }}</a></li>
                    <li><a href="{{ path('login') }}">{{ 'Login'|trans }}</a></li>
                    {% endif %}

                </ul>
                <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
            </div>
        </nav>
            {% block content %}
            {% endblock content %}
        {% endblock body %}
        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
        <script src="{{ asset("js/init.js") }}"></script>
        {% endblock javascripts %}
    </body>
</html>
